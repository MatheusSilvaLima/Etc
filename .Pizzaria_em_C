#include <stdio.h>
#include <stdlib.h>

#define ZERO 0

int main()
{
struct cadclient
{
    char nome[35];
    char end[50];
    char email[25];
    int tel[8];
};

struct Pedido
{
    char tam[10];
    char Tmassa[12];
    char sabor[40];
    char adds[22];
    char ref[10];
    int esc;
};

struct cadclient c1;
struct Pedido p1;

    while(p1.esc != ZERO)
    {
    printf("\t------ Alo Pizza ------\n\n");
    printf("#Escolha uma opcao:\n");
    printf("-1__Cadastro\n");
    printf("-2__Pedido\n");
    printf("-3__Revisao do pedido\n");
    printf("-4__Revisao do cadastro\n");
    printf("-0__Sair\n\n");
    scanf("%d",&p1.esc);
    system("cls");

    switch(p1.esc)
        {
    case 0:
        printf("\t\n\n--------- SAIR ---------\n\n");
        break;
    case 1:
        fflush(stdin);
        printf("\t------ Cadastro do cliente ------\n\n");
        printf("Nome: ");
        gets(c1.nome);
        printf("Endereco: ");
        gets(c1.end);
        printf("Email: ");
        gets(c1.email);
        printf("Telefone: ");
        gets(c1.tel);
        system("cls");
        break;
    case 2:
        fflush(stdin);
        printf("\t------ Pedido ------\n\n");
        printf("Tamanho: ");
        gets(p1.tam);
        printf("Tipo de massa: ");
        gets(p1.Tmassa);
        printf("Sabor(es): ");
        gets(p1.sabor);
        printf("Adicionais: ");
        gets(p1.adds);
        printf("Refrigerante: ");
        gets(p1.ref);
        system("cls");
        break;
    case 3:
        printf ("\t\n\n------ Revisao do pedido ------\n\n");
        printf("Cliente: %s\n",c1.nome);
        printf("Pizza: %s\n",p1.tam);
        printf("Massa: %s\n",p1.Tmassa);
        printf("Sabor(es): %s\n",p1.sabor);
        printf("Adicionais: %s\n",p1.adds);
        printf("Refrigerante: %s\n\n",p1.ref);
        system("pause");
        system("cls");

        break;
    case 4:
        printf("\t\n\n------ Revisao do cadastro ------\n\n");
        printf("Cliente: %s\n",c1.nome);
        printf("Endere√ßo: %s\n",c1.end);
        printf("Numero de telefone: %s\n",c1.tel);
        printf("E-mail: %s\n\n",c1.email);
        system("pause");
        system("cls");
        break;
        }//fim switch
    }//fim while
}//fim main
